# MotherDuck (read-only restaurant data)
MOTHERDUCK_TOKEN=your_motherduck_token
MOTHERDUCK_DATABASE=KS2-Service Agent Read

# MotherDuck (writable management/logging database)
MOTHERDUCK_LOGGING_TOKEN=your_logging_token
MOTHERDUCK_LOGGING_DATABASE=munuiq

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Supabase Auth
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_JWT_SECRET=your-jwt-secret-from-supabase-settings
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Frontend URL for CORS (production only, localhost always allowed)
FRONTEND_URL=https://munuiq-frontend.onrender.com

# Additional schemas to expose to LLM (comma-separated)
EXTRA_SCHEMAS=admin,cakeiteasy,planday,reference

# Claude model
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Ollama (optional, local inference)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_INSIGHT_MODEL=mistral
OLLAMA_TIMEOUT=120
